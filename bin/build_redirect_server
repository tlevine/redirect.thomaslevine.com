#!/bin/sh

# Make sure that git root is set
env|grep -E '^GIT_ROOT=' > /dev/null ||
  (echo 'Error: GIT_ROOT is not be set. Did you activate?' && exit 1)

# Copy files
scp -Cpr "${GIT_ROOT}"/server/* root@redirect.thomaslevine.com:/
scp -pC "${GIT_ROOT}"/application/app.py root@redirect.thomaslevine.com:/srv/v1/app.py

# Run the build script
ssh root@redirect.thomaslevine.com 'sh /root/bin/build_redirect_server'
